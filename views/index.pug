extends layout.pug 

block content

  .carousel
    for image, index in carouselImages
      .carousel-image
        img(src=image)
    .carousel-arrow.carousel-arrow-left
      a(href='')='<'
    .carousel-arrow.carousel-arrow-right
      a(href='')='>'
    .carousel-dots
      for image in carouselImages
        a.carousel-dot(href="")
  .mission
    .mission2
      h1 COME FOR COWORKING, STAY FOR COMMUNITY
      p Impact Hub Oakland is a member-based coworking space and event venue for entrepreneurs creating positive impact.
    .mission2
      h2 Download a Free Day Pass
      h2 Schedule a Tour
  .featured
    .featured2
      h1.main-header Featured Events
    .upcoming-events
      mixin event(imageUrl, title)
        .event-description
          img.event-description-image(src=imageUrl)
          .event-description-title= title
      +event("/images/event11.jpg", "IHO WORKTRADE INFO SESSION – Q4!")
      +event("/images/event12.jpg", "COCAP 2016 – RADICAL REDISTRIBUTION OF WEALTH")
      +event("/images/event13.jpg", "THE SWEETWATER SESSIONS, VOL. 5 “BLACK IS BLUE”")
      +event("/images/event14.jpg", "CHRISTEN LIEN CONCERT – ELPIS IS COMING")
      
  .book-host
    .banner-buttons3
      h2 BOOK A CONFERENCE ROOM
    .banner-buttons3
      h2 HOST YOUR EVENT HERE
  .movie
    iframe(width="700" height="450" src="https://www.youtube.com/embed/pmTm77JKPho" frameborder="0" allowfullscreen)
  .featured
    .featured2
      h1.main-header STORIES FROM OUR COMMUNITY
      //- .upcoming-events-header 
      //-   button UPCOMING EVENTS
    .upcoming-events
      mixin event(imageUrl, title)
        .event-description
          img.event-description-image(src=imageUrl)
          .event-description-title= title
      +event("/images/event11.jpg", "IHO WORKTRADE INFO SESSION – Q4!")
      +event("/images/event12.jpg", "COCAP 2016 – RADICAL REDISTRIBUTION OF WEALTH")
      +event("/images/event13.jpg", "THE SWEETWATER SESSIONS, VOL. 5 “BLACK IS BLUE”")
      +event("/images/event14.jpg", "CHRISTEN LIEN CONCERT – ELPIS IS COMING")
  .youth
    h2 CHECK OUT THE IMPACT YOUTH HUB
    .youth2
      img(src='/images/youth.jpg')
      div
        p Impact HUB Oakland has chosen United Roots and Youth SEED to launch Youth HUB, a collaborative workspace for young social innovators, and provides programming that will create a pipeline for low-income youth of color to participate in creating business enterprises that address social and environmental issues.
